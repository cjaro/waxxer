extends layout

block content

    div(class="container")
        h1= title
        h2 Weather in !{weather.name}, !{weather.country} (!{weather.latitude}, !{weather.longitude}) as of !{weather.currentTime}
        img(src=`http://openweathermap.org/img/wn/${weather.iconCode}.png`)

        p Current weather condition: !{weather.condition} (!{weather.conditionDescription})

        table(style="width:50%;")
            tr
                td(style="border-bottom: 1px solid black;") Sunrise/Sunset
                td(style="border-bottom: 1px solid black;") !{weather.sunrise}
                td(style="border-bottom: 1px solid black;") !{weather.sunset}
            tr
                td(style="border-bottom: 1px solid black;") Current Temp
                td(style="border-bottom: 1px solid black;") !{weather.currentTempC}ºC
                td(style="border-bottom: 1px solid black;") !{weather.currentTempF}ºF
            tr
                td(style="border-bottom: 1px solid black;") High
                td(style="border-bottom: 1px solid black;") !{weather.tempHighC}ºC
                td(style="border-bottom: 1px solid black;") !{weather.tempHighF}ºF
            tr
                td(style="border-bottom: 1px solid black;") Low
                td(style="border-bottom: 1px solid black;") !{weather.tempLowC}ºC
                td(style="border-bottom: 1px solid black;") !{weather.tempLowF}ºF
            tr
                td(style="border-bottom: 1px solid black;") Feels like
                td(style="border-bottom: 1px solid black;") !{weather.feelsLikeC}ºC
                td(style="border-bottom: 1px solid black;") !{weather.feelsLikeF}ºF
            tr
                td(style="border-bottom: 1px solid black;") Humidity
                td(style="border-bottom: 1px solid black;") !{weather.humidity}%
                td(style="border-bottom: 1px solid black;")
            tr
                td(style="border-bottom: 1px solid black;") Pressure
                td(style="border-bottom: 1px solid black;") !{weather.pressure}mB
                td(style="border-bottom: 1px solid black;")
